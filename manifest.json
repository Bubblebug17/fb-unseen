{
  "name": "FB unseen",
  "icon": "icon48.png",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Blocks the ”seen” feature of the facebook messenger.",
  "background": {
    "scripts": ["fancy-settings/source/lib/store.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["jquery.js", "read_button.js"],
      "css": ["read_button.css"]
    }
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.facebook.com/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "fancy-settings/source/index.html"
}
